<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_accountsFragment"
            app:destination="@id/accountsFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_loginFragment_to_twoFactorAuthFragment2"
            app:destination="@id/twoFactorAuthFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.AccountsFragment"
        android:label="fragment_accounts"
        tools:layout="@layout/fragment_accounts" >
        <action
            android:id="@+id/action_accountsFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"
            app:popUpTo="@id/accountsFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_accountsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/left_in"
            app:exitAnim="@anim/left_out"
            app:popEnterAnim="@anim/right_in"
            app:popExitAnim="@anim/right_out"
            app:popUpTo="@id/accountsFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/twoFactorAuthFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.TwoFactorAuthFragment"
        android:label="fragment_two_factor_auth"
        tools:layout="@layout/fragment_two_factor_auth" >
        <action
            android:id="@+id/action_twoFactorAuthFragment_to_accountsFragment"
            app:destination="@id/accountsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_activityInfoFragment"
            app:destination="@id/activityInfoFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"/>
        <action
            android:id="@+id/action_settingsFragment_to_helpAndSupportFragment"
            app:destination="@id/helpAndSupportFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"/>
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"/>
        <action
            android:id="@+id/action_dashboardFragment_to_accountsFragment"
            app:destination="@id/accountsFragment"
            app:enterAnim="@anim/left_in"
            app:exitAnim="@anim/left_out"
            app:popEnterAnim="@anim/right_in"
            app:popExitAnim="@anim/right_out"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_dashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/left_in"
            app:exitAnim="@anim/left_out"
            app:popEnterAnim="@anim/right_in"
            app:popExitAnim="@anim/right_out"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_dashboardFragment_to_jobFragment"
            app:destination="@id/jobFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"/>
    </fragment>

    <fragment
        android:id="@+id/activityInfoFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.ActivityInfoFragment"
        android:label="fragment_activity_info"
        tools:layout="@layout/fragment_activity_info" />

    <fragment
        android:id="@+id/helpAndSupportFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.HelpAndSupportFragment"
        android:label="fragment_help_and_support"
        tools:layout="@layout/fragment_help_and_support" >
        <action
            android:id="@+id/action_helpAndSupportFragment_to_webViewFragment"
            app:destination="@id/webViewFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"
            />
        <action
            android:id="@+id/action_helpAndSupportFragment_to_licensesFragment"
            app:destination="@id/licensesFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"/>
    </fragment>

    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.WebViewFragment"
        android:label="fragment_web_view"
        tools:layout="@layout/fragment_web_view">

        <argument
            android:name="webURL"
            app:argType="string"
            android:defaultValue="nothing" />

    </fragment>

    <fragment
        android:id="@+id/licensesFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.LicensesFragment"
        android:label="fragment_licenses"
        tools:layout="@layout/fragment_licenses" />

    <fragment
        android:id="@+id/jobFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.JobFragment"
        android:label="fragment_job"
        tools:layout="@layout/fragment_job">

        <argument
            android:name="workflow_id"
            app:argType="string" />
        <action
            android:id="@+id/action_jobFragment_to_jobRunFragment"
            app:destination="@id/jobRunFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/right_out"
            app:popEnterAnim="@anim/left_in"
            app:popExitAnim="@anim/left_out"
            />

    </fragment>
    <fragment
        android:id="@+id/jobRunFragment"
        android:name="com.arm.peliondevicemanagement.screens.fragments.JobRunFragment"
        android:label="fragment_job_run"
        tools:layout="@layout/fragment_job_run">
        <argument
            android:name="run_object"
            app:argType="com.arm.peliondevicemanagement.components.models.workflow.device.DeviceRun" />
    </fragment>

</navigation>