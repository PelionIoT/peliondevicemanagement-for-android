<resources>

    <!-- Light Theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/arm_black</item>
        <item name="colorPrimaryDark">@color/arm_black</item>
        <item name="colorAccent">@color/colorAccentForLight</item>
        <item name="android:windowBackground">@color/colorBackgroundForLight</item>

        <item name="colorBackground">@color/colorBackgroundForLight</item>

        <item name="primaryIconColor">@android:color/black</item>

        <item name="primaryTextColor">@color/colorPrimaryForDark</item>
        <item name="secondaryTextColor">@color/colorPrimaryDarkForDark</item>

        <item name="dividerColor">?attr/colorOnSurface</item>

        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>

        <item name="primaryButtonColor">@color/colorPrimaryDarkForLight</item>

        <item name="iconAccount">@drawable/ic_account_dark</item>
        <item name="iconEmail">@drawable/ic_mail_dark</item>
        <item name="iconLock">@drawable/ic_lock_dark</item>
        <item name="iconSearch">@drawable/ic_search_dark</item>
        <item name="iconWidget">@drawable/ic_widget_dark</item>
        <item name="iconLocation">@drawable/ic_location_dark</item>
        <item name="iconDevice">@drawable/ic_device_dark</item>
        <item name="iconClose">@drawable/ic_close_dark</item>
        <item name="iconSwitch">@drawable/ic_switch_dark</item>
        <item name="iconSettings">@drawable/ic_settings_dark</item>
        <item name="iconExit">@drawable/ic_exit_dark</item>
    </style>

    <!-- Launch Theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppThemeDark.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Dark Theme. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryForDark</item>
        <item name="colorPrimaryDark">@color/arm_black</item>
        <item name="colorAccent">@color/colorAccentForDark</item>
        <item name="android:windowBackground">@color/colorBackgroundForDark</item>

        <item name="colorBackground">@color/colorBackgroundForDark</item>

        <item name="primaryIconColor">@android:color/white</item>

        <item name="primaryTextColor">@color/colorPrimaryForLight</item>
        <item name="secondaryTextColor">@color/colorPrimaryDarkForLight</item>

        <item name="dividerColor">?attr/colorOnSurface</item>

        <item name="primaryButtonColor">@color/colorPrimaryForDark</item>

        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>

        <item name="iconAccount">@drawable/ic_account_light</item>
        <item name="iconEmail">@drawable/ic_mail_light</item>
        <item name="iconLock">@drawable/ic_lock_light</item>
        <item name="iconSearch">@drawable/ic_search_light</item>
        <item name="iconWidget">@drawable/ic_widget_light</item>
        <item name="iconLocation">@drawable/ic_location_light</item>
        <item name="iconDevice">@drawable/ic_device_light</item>
        <item name="iconClose">@drawable/ic_close_light</item>
        <item name="iconSwitch">@drawable/ic_switch_light</item>
        <item name="iconSettings">@drawable/ic_settings_light</item>
        <item name="iconExit">@drawable/ic_exit_light</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
