<resources>

    <!-- Light Theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/arm_black</item>
        <item name="colorPrimaryDark">@color/arm_black</item>
        <item name="colorAccent">@color/colorAccentForLight</item>
        <item name="android:windowBackground">@color/colorBackgroundForLight</item>

        <item name="colorBackground">@color/colorBackgroundForLight</item>

        <item name="primaryIconColor">@android:color/black</item>

        <item name="primaryTextColor">@color/colorPrimaryForDark</item>
        <item name="secondaryTextColor">@color/colorPrimaryDarkForDark</item>

        <item name="dividerColor">?attr/colorOnSurface</item>

        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>

        <item name="primaryButtonColor">@color/colorPrimaryDarkForLight</item>
        <item name="cardColor">@color/colorBackgroundForLight</item>
        <item name="chipColor">@color/arm_light_gray</item>

        <item name="iconAccount">@drawable/ic_account_dark</item>
        <item name="iconEmail">@drawable/ic_mail_dark</item>
        <item name="iconLock">@drawable/ic_lock_dark</item>
        <item name="iconSearch">@drawable/ic_search_dark</item>
        <item name="iconWidget">@drawable/ic_job_dark</item>
        <item name="iconLocation">@drawable/ic_location_dark</item>
        <item name="iconDevice">@drawable/ic_device_dark</item>
        <item name="iconClose">@drawable/ic_close_dark</item>
        <item name="iconSwitch">@drawable/ic_switch_dark</item>
        <item name="iconSettings">@drawable/ic_settings_dark</item>
        <item name="iconExit">@drawable/ic_exit_dark</item>
        <item name="iconUserActivity">@drawable/ic_stats_dark</item>
        <item name="iconHelp">@drawable/ic_help_dark</item>
        <item name="iconPC">@drawable/ic_pc_dark</item>
        <item name="iconForward">@drawable/ic_forward_dark</item>
        <item name="iconPlay">@drawable/ic_play_dark</item>
        <item name="iconArrowUp">@drawable/ic_arrow_up_dark</item>
        <item name="iconArrowDown">@drawable/ic_arrow_down_dark</item>
        <item name="iconShieldGreen">@drawable/ic_shield_green</item>
        <item name="iconShieldYellow">@drawable/ic_shield_yellow</item>
        <item name="iconShieldRed">@drawable/ic_shield_red</item>
        <item name="iconRefresh">@drawable/ic_refresh_dark</item>
        <item name="iconStop">@drawable/ic_stop_dark</item>
        <item name="iconDeveloper">@drawable/ic_developer_dark</item>
        <item name="iconDownload">@drawable/ic_download_dark</item>
        <item name="iconAsset">@drawable/ic_asset_dark</item>
        <item name="iconSync">@drawable/ic_sync_dark</item>
    </style>

    <!-- Launch Theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppThemeDark.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Dark Theme. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryForDark</item>
        <item name="colorPrimaryDark">@color/arm_black</item>
        <item name="colorAccent">@color/colorAccentForDark</item>
        <item name="android:windowBackground">@color/colorBackgroundForDark</item>

        <item name="colorBackground">@color/colorBackgroundForDark</item>

        <item name="primaryIconColor">@android:color/white</item>

        <item name="primaryTextColor">@color/colorPrimaryForLight</item>
        <item name="secondaryTextColor">@color/colorPrimaryDarkForLight</item>

        <item name="dividerColor">@android:color/white</item>
        <item name="primaryButtonColor">@color/colorPrimaryForDark</item>
        <item name="cardColor">@color/arm_black</item>
        <item name="chipColor">@color/arm_gray_alt</item>

        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>

        <item name="iconAccount">@drawable/ic_account_light</item>
        <item name="iconEmail">@drawable/ic_mail_light</item>
        <item name="iconLock">@drawable/ic_lock_light</item>
        <item name="iconSearch">@drawable/ic_search_light</item>
        <item name="iconWidget">@drawable/ic_job_light</item>
        <item name="iconLocation">@drawable/ic_location_light</item>
        <item name="iconDevice">@drawable/ic_device_light</item>
        <item name="iconClose">@drawable/ic_close_light</item>
        <item name="iconSwitch">@drawable/ic_switch_light</item>
        <item name="iconSettings">@drawable/ic_settings_light</item>
        <item name="iconExit">@drawable/ic_exit_light</item>
        <item name="iconUserActivity">@drawable/ic_stats_light</item>
        <item name="iconHelp">@drawable/ic_help_light</item>
        <item name="iconPC">@drawable/ic_pc_light</item>
        <item name="iconForward">@drawable/ic_forward_light</item>
        <item name="iconPlay">@drawable/ic_play_light</item>
        <item name="iconArrowUp">@drawable/ic_arrow_up_light</item>
        <item name="iconArrowDown">@drawable/ic_arrow_down_light</item>
        <item name="iconShieldGreen">@drawable/ic_shield_green</item>
        <item name="iconShieldYellow">@drawable/ic_shield_yellow</item>
        <item name="iconShieldRed">@drawable/ic_shield_red</item>
        <item name="iconRefresh">@drawable/ic_refresh_light</item>
        <item name="iconStop">@drawable/ic_stop_light</item>
        <item name="iconDeveloper">@drawable/ic_developer_light</item>
        <item name="iconDownload">@drawable/ic_download_light</item>
        <item name="iconAsset">@drawable/ic_asset_light</item>
        <item name="iconSync">@drawable/ic_sync_light</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TransparentSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

</resources>
