    <declare-styleable name="GlobalAttrs">

        <!-- Generic Visual Components -->
        <attr name="colorBackground" format="color" />

        <!-- Icon Colors -->
        <attr name="primaryIconColor" format="color"/>

        <!-- Text Colors -->
        <attr name="primaryTextColor" format="color"/>
        <attr name="secondaryTextColor" format="color"/>

        <!-- Component Colors -->
        <attr name="dividerColor" format="color"/>
        <attr name="primaryButtonColor" format="color" />
        <attr name="cardColor" format="color"/>
        <attr name="chipColor" format="color"/>

        <!-- Icons -->
        <attr name="iconAccount" format="reference"/>
        <attr name="iconEmail" format="reference" />
        <attr name="iconLock" format="reference"/>
        <attr name="iconSearch" format="reference"/>
        <attr name="iconWidget" format="reference"/>
        <attr name="iconLocation" format="reference"/>
        <attr name="iconDevice" format="reference"/>
        <attr name="iconClose" format="reference"/>
        <attr name="iconSwitch" format="reference"/>
        <attr name="iconSettings" format="reference"/>
        <attr name="iconExit" format="reference"/>
        <attr name="iconUserActivity" format="reference"/>
        <attr name="iconHelp" format="reference" />
        <attr name="iconPC" format="reference"/>
        <attr name="iconForward" format="reference"/>
        <attr name="iconPlay" format="reference"/>
        <attr name="iconArrowUp" format="reference"/>
        <attr name="iconArrowDown" format="reference"/>
        <attr name="iconShieldGreen" format="reference"/>
        <attr name="iconShieldYellow" format="reference"/>
        <attr name="iconShieldRed" format="reference"/>

    </declare-styleable>
</resources>