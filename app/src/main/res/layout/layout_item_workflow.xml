<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardWorkflowItem"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="?attr/cardColor"
    app:checkedIconTint="?attr/colorAccent"
    app:rippleColor="?attr/colorAccent"
    app:cardElevation="0dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="5dp"
            android:layout_height="110dp"
            android:id="@+id/syncStatusView"
            android:visibility="visible"
            android:background="@color/arm_green"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="?attr/iconWidget"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:paddingTop="15dp"
            android:id="@+id/tvName"
            android:drawablePadding="15dp"
            android:fontFamily="@font/lato_regular"
            android:layout_toStartOf="@id/syncStatusCheckView"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="18sp"
        />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:id="@+id/chipDeviceCount"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:focusable="false"
            />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:id="@+id/chipLocation"
            android:layout_toEndOf="@id/chipDeviceCount"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:clickable="false"
            android:focusable="false"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/syncStatusCheckView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_status_ok"
            android:src="@drawable/ic_check_light"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerColor"
            android:alpha="0.12"
        />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>